<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ccaf.dao.FBlistmccDao">

	<select id="get" resultType="com.ccaf.domain.FBlistmccDO">
		select `mcc`,`lst_upd_ttp`,`mcc_nme`,`sts` from tb_f_blistmcc where mcc = #{value}
	</select>

	<select id="list" resultType="com.ccaf.domain.FBlistmccDO">
		select `mcc`,`lst_upd_ttp`,`mcc_nme`,`sts` from tb_f_blistmcc
        <where>  
		  		  <if test="mcc != null and mcc != ''"> and mcc = #{mcc} </if>
		  		  <if test="lstUpdTtp != null and lstUpdTtp != ''"> and lst_upd_ttp = #{lstUpdTtp} </if>
		  		  <if test="mccNme != null and mccNme != ''"> and mcc_nme = #{mccNme} </if>
		  		  <if test="sts != null and sts != ''"> and sts = #{sts} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by mcc desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_f_blistmcc
		 <where>  
		  		  <if test="mcc != null and mcc != ''"> and mcc = #{mcc} </if>
		  		  <if test="lstUpdTtp != null and lstUpdTtp != ''"> and lst_upd_ttp = #{lstUpdTtp} </if>
		  		  <if test="mccNme != null and mccNme != ''"> and mcc_nme = #{mccNme} </if>
		  		  <if test="sts != null and sts != ''"> and sts = #{sts} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ccaf.domain.FBlistmccDO">
		insert into tb_f_blistmcc
		(
			`mcc`, 
			`lst_upd_ttp`, 
			`mcc_nme`, 
			`sts`
		)
		values
		(
			#{mcc}, 
			#{lstUpdTtp}, 
			#{mccNme}, 
			#{sts}
		)
	</insert>
	 
	<update id="update" parameterType="com.ccaf.domain.FBlistmccDO">
		update tb_f_blistmcc 
		<set>
			<if test="lstUpdTtp != null">`lst_upd_ttp` = #{lstUpdTtp}, </if>
			<if test="mccNme != null">`mcc_nme` = #{mccNme}, </if>
			<if test="sts != null">`sts` = #{sts}</if>
		</set>
		where mcc = #{mcc}
	</update>
	
	<delete id="remove">
		delete from tb_f_blistmcc where mcc = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_f_blistmcc where mcc in 
		<foreach item="mcc" collection="array" open="(" separator="," close=")">
			#{mcc}
		</foreach>
	</delete>

</mapper>