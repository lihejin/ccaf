<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ccaf.dao.AuthhistDao">

	<select id="get" resultType="com.ccaf.domain.AuthhistDO">
		select `sys_mde_ind`,`lst_upd_ttp`,`pan_txt`,`txn_ttp`,`seq`,`pcs_sys_ind`,`msg_dta_txt` from tb_authhist where sys_mde_ind = #{value}
	</select>

	<select id="list" resultType="com.ccaf.domain.AuthhistDO">
		select `sys_mde_ind`,`lst_upd_ttp`,`pan_txt`,`txn_ttp`,`seq`,`pcs_sys_ind`,`msg_dta_txt` from tb_authhist
        <where>  
		  		  <if test="sysMdeInd != null and sysMdeInd != ''"> and sys_mde_ind = #{sysMdeInd} </if>
		  		  <if test="lstUpdTtp != null and lstUpdTtp != ''"> and lst_upd_ttp = #{lstUpdTtp} </if>
		  		  <if test="panTxt != null and panTxt != ''"> and pan_txt = #{panTxt} </if>
		  		  <if test="txnTtp != null and txnTtp != ''"> and txn_ttp = #{txnTtp} </if>
		  		  <if test="seq != null and seq != ''"> and seq = #{seq} </if>
		  		  <if test="pcsSysInd != null and pcsSysInd != ''"> and pcs_sys_ind = #{pcsSysInd} </if>
		  		  <if test="msgDtaTxt != null and msgDtaTxt != ''"> and msg_dta_txt = #{msgDtaTxt} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by sys_mde_ind desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from tb_authhist
		 <where>  
		  		  <if test="sysMdeInd != null and sysMdeInd != ''"> and sys_mde_ind = #{sysMdeInd} </if>
		  		  <if test="lstUpdTtp != null and lstUpdTtp != ''"> and lst_upd_ttp = #{lstUpdTtp} </if>
		  		  <if test="panTxt != null and panTxt != ''"> and pan_txt = #{panTxt} </if>
		  		  <if test="txnTtp != null and txnTtp != ''"> and txn_ttp = #{txnTtp} </if>
		  		  <if test="seq != null and seq != ''"> and seq = #{seq} </if>
		  		  <if test="pcsSysInd != null and pcsSysInd != ''"> and pcs_sys_ind = #{pcsSysInd} </if>
		  		  <if test="msgDtaTxt != null and msgDtaTxt != ''"> and msg_dta_txt = #{msgDtaTxt} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ccaf.domain.AuthhistDO">
		insert into tb_authhist
		(
			`sys_mde_ind`, 
			`lst_upd_ttp`, 
			`pan_txt`, 
			`txn_ttp`, 
			`seq`, 
			`pcs_sys_ind`, 
			`msg_dta_txt`
		)
		values
		(
			#{sysMdeInd}, 
			#{lstUpdTtp}, 
			#{panTxt}, 
			#{txnTtp}, 
			#{seq}, 
			#{pcsSysInd}, 
			#{msgDtaTxt}
		)
	</insert>
	 
	<update id="update" parameterType="com.ccaf.domain.AuthhistDO">
		update tb_authhist 
		<set>
			<if test="lstUpdTtp != null">`lst_upd_ttp` = #{lstUpdTtp}, </if>
			<if test="panTxt != null">`pan_txt` = #{panTxt}, </if>
			<if test="txnTtp != null">`txn_ttp` = #{txnTtp}, </if>
			<if test="seq != null">`seq` = #{seq}, </if>
			<if test="pcsSysInd != null">`pcs_sys_ind` = #{pcsSysInd}, </if>
			<if test="msgDtaTxt != null">`msg_dta_txt` = #{msgDtaTxt}</if>
		</set>
		where sys_mde_ind = #{sysMdeInd}
	</update>
	
	<delete id="remove">
		delete from tb_authhist where sys_mde_ind = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from tb_authhist where sys_mde_ind in 
		<foreach item="sysMdeInd" collection="array" open="(" separator="," close=")">
			#{sysMdeInd}
		</foreach>
	</delete>

</mapper>